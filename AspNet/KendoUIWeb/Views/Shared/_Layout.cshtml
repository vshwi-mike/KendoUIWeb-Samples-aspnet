@using System.Web.Configuration
@{
    string ApiUrl = WebConfigurationManager.AppSettings["URL_API"];
    string WebUrl = WebConfigurationManager.AppSettings["URL_WEB"];
       
}<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    <link href="//cdn.kendostatic.com/2014.3.1411/styles/kendo.common.min.css" rel="stylesheet" type="text/css" >
    <link href="//cdn.kendostatic.com/2014.3.1411/styles/kendo.default.min.css" rel="stylesheet" type="text/css" >
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" >

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</head>
<body>
    <header class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Kendo UI Web Samples", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="page-footer">
        &copy;Company Name 2014-2015
    </footer>

    <script src="//cdn.kendostatic.com/2014.3.1411/js/kendo.all.min.js"></script>
    <script>
        var App = App || {};
        App.apiUrl = "@(ApiUrl)";
        App.url = "@(WebUrl)";

        App.getApiUrl = function (path) {
            return App.apiUrl + path;
        };
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
