@section scripts {
    <script src="@Url.Content("~/Scripts/App/Samples/listview1.js")"></script>
}

<style scoped>
    h2 {
        margin-bottom: 40px;
    }

    #list {
        padding-left: 4px;
    }
    
    #list li {
        display: inline-block;
        float:left;
        max-width: 200px;
        height: 30px;
        margin: 4px; 
        padding: 3px;
        border: 1px solid pink;
        border-radius: 4px;
    }
</style>

<div id="app" >
    <h2>リストビューを使う(1)</h2>

    <div class="row">
        <div class="col-md-12">
            <ul id="list"
                 data-role="listview"
                 data-bind="source: productList"
                 data-template="tpl_product"
                 data-selectable="true"
                 style="width:100%; height:200px;overflow: scroll;"
                 ></ul>
            <script id="tpl_product" type="text/k-kendo-tmpl">
                <li>#:ProductName#</li>
            </script>
        </div>
    </div>

</div>

@Html.Partial("_SourceCode", new { javascript = "listview1", html = "ListView1", link = "api/javascript/ui/listview" })



